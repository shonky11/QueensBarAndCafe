<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/options_card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16sp">

            <TextView
                android:id="@+id/txtView_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:paddingLeft="20sp"
                android:text="Multiple option"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/btn_minus"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_toLeftOf="@+id/quantity"
                android:text="-"
                android:paddingRight="10sp"/>

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_plus"
                android:text="0"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btn_plus"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_toLeftOf="@+id/PriceTxt"
                android:text="+"
                android:paddingRight="10sp"/>

            <TextView
                android:id="@+id/final_pricetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/item_delete"
                android:paddingRight="10sp"
                android:text="Â£0.00"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/item_delete"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerVertical="true"
                android:paddingRight="10sp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
